<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="StudyNomMobileApp.MainPage">
    <ContentPage.Resources>
        <ResourceDictionary Source="./Styles/MainPageStyle.xaml"></ResourceDictionary>
    </ContentPage.Resources>
    <FlexLayout Direction="Column"
                JustifyContent="SpaceBetween">
        <StackLayout Spacing="0">
            <!--#region Верхний Bar-->
            <Frame  Style="{StaticResource FrameTopBar}">
                <FlexLayout     Style="{StaticResource FlexTopBar}">
                    <Button Style="{StaticResource MenuTopBar}"
                            Text="Menu"/>
                    <Entry  Style="{StaticResource SearchTopBar}"
                            Placeholder="Поиск"/>
                    <ImageButton Style="{StaticResource ProfileTopBar}"/>
                </FlexLayout>
            </Frame>
            <!--#endregion-->

            
            
            
            <!--#region Баннер-->
            <Frame Style="{StaticResource Key=Banner}">
                <Label Text="Тут будет Рекламка"
                       HorizontalOptions="CenterAndExpand"
                       FontSize="30"></Label>
            </Frame>
            <!--#endregion-->
        </StackLayout>

        
        <!--Контент-->
        <Frame>
            <Label Text="Тут будет контент"
                   HorizontalOptions="CenterAndExpand"
                   FontSize="30"></Label>
        </Frame>

        <!--Панель навигации-->
        <FlexLayout Style="{StaticResource NavFlex}">
            <Button Style="{StaticResource NavBtns}" 
                    Text="Домой" ></Button>
            <Button Style="{StaticResource NavBtns}" 
                    Text="Тренировка"></Button>
            <Button Style="{StaticResource NavBtns}" 
                    Text="Новости"></Button>
            <Button Style="{StaticResource NavBtns}" 
                    Text="Прогресс"></Button>
        </FlexLayout>
    </FlexLayout>


</ContentPage>
